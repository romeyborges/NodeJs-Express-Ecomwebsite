<!-- Product containers -->
{{# each products }}
  <div class="row">
    <!-- Products-->
    {{# each this }}
    
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{ this.imagePath }}"  id="changeColor" alt="..." class="img-responsive">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <p>{{ this.description }}</p>
            <div class="clearfix">
              <div class="price pull-left">${{ this.price }}</div>
                <p class="txt"> Choose color: </p>
                <div class="colorHolder">
                  <a href="/addToCart/{{this._id}}" title="{{this.c1Description }}" onclick="document.getElementById('changeColor').src='{{ this.color1 }}'" > 
                    <img src="{{this.color1}}" alt="1-full Black" style="height:36px; width:36px" class="imgSwatch">
                  </a>
                  <a href="/addToCart/{{this._id}}" title="{{ this.c2Description }}" onclick="document.getElementById('changeColor').src='{{ this.color2 }}'" >
                    <img src="{{this.color2}}" alt="2-white" style="height:36px; width:36px" class="imgSwatch">
                  </a>
                </div>
                <div class="buy">
                    <a href="/addToCart/{{this._id}}" class="btn btn-success" role="button">BUY</a>
                </div>
                
            </div>
          </div>
        </div>
      </div>
    
    {{/each}}
  </div>
{{/each}}

